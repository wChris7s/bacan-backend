<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">
    <changeSet author="Christian W. Aranibar Solaligue" id="1759790560972-1">
        <createTable remarks="Distrito" schemaName="location" tableName="district">
            <column name="id" type="VARCHAR(6)">
                <constraints nullable="false" primaryKey="true" primaryKeyName="district_pk"/>
            </column>
            <column name="name" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="province_id" type="VARCHAR(4)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet author="Christian W. Aranibar Solaligue" id="1759790560972-2">
        <addForeignKeyConstraint baseColumnNames="province_id" baseTableName="district" baseTableSchemaName="location"
                                 constraintName="district_province_fk" deferrable="false" initiallyDeferred="false"
                                 onDelete="NO ACTION" onUpdate="NO ACTION" referencedColumnNames="id"
                                 referencedTableName="province" referencedTableSchemaName="location" validate="true"/>
    </changeSet>

    <changeSet author="Christian W. Aranibar Solaligue" id="1759790725087-1">
        <loadData commentLineStartsWith="#" encoding="UTF-8"
                  file="classpath:db/changelog/data/district.csv" quotchar="&quot;"
                  schemaName="location" separator="," tableName="district">
            <column header="id" name="id" type="STRING"/>
            <column header="name" name="name" type="STRING"/>
            <column header="province_id" name="province_id" type="STRING"/>
        </loadData>
    </changeSet>
</databaseChangeLog>
